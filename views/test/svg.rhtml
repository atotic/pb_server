<!DOCTYPE html>
<html>
<head>
	<title>Test: SVG</title>
	<%= asset_link("jquery.js", "jquery-ui.js", "application.js", "editor.js", "editor.model.js") %>
	<%= asset_link("jquery-ui.css", "application.css") %>
</head>
<body>
<%= erb :'layout/header_bar' %>
<h1>SVG tests</h1>
<button onclick="vbox()">Change vbox</button>
<pre id="log"></pre>
<div id="page">
<div id="blue" style="background-color:blue">
<svg id="svg1" version="1.1"
     baseProfile="full"
     xmlns="http://www.w3.org/2000/svg"
width="100" height="100"
>
  <rect width="100%" height="100%" fill="red" />
  <circle cx="50" cy="50" r="30" fill="green" />
  <text x="50" y="60" font-size="30" text-anchor="middle" fill="white">SVG</text>

</svg>
</div>
<svg id="svg2" version="1.1"
     baseProfile="full"
     xmlns="http://www.w3.org/2000/svg"
width="100" height="100""
>
  <rect width="100%" height="100%" fill="red" />
  <circle cx="50" cy="50" r="30" fill="green" />
  <text x="50" y="60" font-size="30" text-anchor="middle" fill="white">SVG</text>

</svg>
</div>
<script>
function vbox()
{
	var s1 = $("#svg1").get(0);
	var s2 = $("#svg2").get(0);
	s1.viewBox.baseVal.width += 10;
	s1.viewBox.baseVal.height += 10;
}

</script>
</body>
